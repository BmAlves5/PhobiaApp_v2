<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <!-- Layout para as aranhas -->
    <RelativeLayout
        android:id="@+id/spidersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-700dp"
        android:layout_marginRight="-5dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        android:src="@drawable/retangulo_inicialat" />

    <View
        android:id="@+id/image_head"
        android:layout_width="123dp"
        android:layout_height="127dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/head" />

    <TextView
        android:id="@+id/phobia_app"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal|top"
        android:hint="Phobia App"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColorHint="#FFFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gamelevels"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal|top"
        android:hint="Phobia Levels"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColorHint="#FFFFFFFF"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/levelButton1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:backgroundTint="#E8E4E4"
            android:paddingRight="0dp"
            android:text="Level 1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/levelButton2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:backgroundTint="#E8E4E4"
            android:paddingRight="0dp"
            android:text="Level 2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/levelButton3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="390dp"
            android:backgroundTint="#E8E4E4"
            android:paddingRight="0dp"
            android:text="Level 3"
            android:textSize="20dp" />


        <Button
            android:id="@+id/levelButton4"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp"
            android:backgroundTint="#E8E4E4"
            android:paddingRight="0dp"
            android:text="Level 4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/levelButton5"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="530dp"
            android:backgroundTint="#E8E4E4"
            android:paddingRight="0dp"
            android:text="Level 5"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFFFFF">


        <ImageView
            android:id="@+id/base"
            android:layout_width="367dp"
            android:layout_height="113dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="690dp"
            android:background="@drawable/rectanglegrey" />

        <Button
            android:id="@+id/accountButton"
            android:layout_width="47dp"
            android:layout_height="48dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="723dp"
            android:background="@drawable/accountgrey"
            android:elevation="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/account"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="767dp"
            android:elevation="10dp"
            android:gravity="center_horizontal|top"
            android:hint="Account"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="725dp"
            android:background="@drawable/homegrey"
            android:elevation="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/home"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="768dp"
            android:elevation="10dp"
            android:gravity="center_horizontal|top"
            android:hint="Home"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="720dp"
            android:background="@drawable/exit"
            android:elevation="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/exit"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="768dp"
            android:elevation="10dp"
            android:gravity="center_horizontal|top"
            android:hint="Exit"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:backgroundTint="#11A4AC"
            android:paddingRight="0dp"
            android:text="Next"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/disconnect"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="670dp"
            android:layout_marginLeft="140dp"
            android:hint=""
            android:scaleType="centerCrop" />

    </RelativeLayout>

</RelativeLayout>